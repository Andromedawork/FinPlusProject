@model FinPlus.Domain.Users.Admin.Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Admin</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Изменение данных администратора</h2>
        <form asp-action="UpdateAdmin" method="post">
            <div class="mb-3">
                <input asp-for="Id" class="form-control" required hidden />
            </div>
            <div class="form-group">
                <label asp-for="Role">Role</label>
                <select asp-for="Role" class="form-control">
                    <option value="1">Admin</option>
                    <option value="2">Manager</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="MobileNumber" class="form-label">Номер телефона</label>
                <input type="tel" class="form-control" id="mobileNumber" placeholder="Номер телефона" asp-for="MobileNumber" required />
            </div>
            <div class="form-group">
                <label asp-for="OrganisationId">Organisation Id</label>
                <input asp-for="OrganisationId" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
            @if (ViewBag.UserRole == "MainAdmin")
            {
                <a class="nav-link text-danger" asp-controller="Admin" asp-action="DeleteAdmin" asp-route-id="@Model.Id">Удалить</a>
            }
            @if (ViewBag.UserRole == "Admin")
            {
                <a class="nav-link text-danger" asp-controller="Admin" asp-action="DeleteAdmin" asp-route-id="@Model.Id">Удалить</a>
            }
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>