@model FinPlus.Presentation.Models.OfferModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Создать Оффер</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Создать Оффер</h1>
        <form asp-action="CreateOffer" method="post">
            <div class="mb-3">
                <label asp-for="Type" class="form-label">Тип</label>
                <select asp-for="Type" class="form-control">
                    <option value="">Выберите тип</option>
                    <option value="0">Debet</option>
                    <option value="1">Credit</option>
                    <option value="2">SCS</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Profit" class="form-label">Прибыль</label>
                <input asp-for="Profit" class="form-control" type="number" step="0.01" />
            </div>
            <div class="mb-3">
                <label asp-for="TargetAction" class="form-label">Целевое Действие</label>
                <input asp-for="TargetAction" class="form-control" type="number" step="0.01" />
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
