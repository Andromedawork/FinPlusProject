@using FinPlus.Presentation.Models;
@model TraferModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Редактировать Трафера</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4" style="border-bottom: 2px solid;">Редактировать Трафера</h1>
        <form asp-action="EditTrafer" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Имя</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Login" class="form-label">Логин</label>
                <input asp-for="Login" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="ReferalId" class="form-label">Referal ID</label>
                <input asp-for="ReferalId" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="MobileNumber" class="form-label">Номер телефона</label>
                <input type="tel" class="form-control phone" id="mobileNumber" name="mobileNumber" placeholder="Номер телефона" asp-for="MobileNumber" required />
            </div>
            <div class="mb-3">
                <label asp-for="Level" class="form-label">Уровень</label>
                <select asp-for="Level" class="form-control" required>
                    <option value="1">Junior Referal</option>
                    <option value="2">Middle Referal</option>
                    <option value="3">Senior Referal</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Bet" class="form-label">Bet</label>
                <input asp-for="Bet" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>